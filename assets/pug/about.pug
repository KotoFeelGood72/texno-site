extends _layout

block vars
	- array = {body_class:'', layout_mod:'', sub_keywords:'', title_inner:'О компании'}
block content_block
	+breadcrumb(['Главная'], 'О компании')
	section.heroabout 
		.section_in 
			.heroabout_main 
				.heroabout_main_content 
					.heroabout_content_title.section_title 
						h1 О компании
					.heroabout_content_txt.global_txt 
						p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
						p Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
						p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
				.heroabout_img 
					img(src="i/about/hero.png", alt="")
	section.about-service 
		.section_in 
			.about-service_main 
				ul.about-service_list
					-for(i = 0; i < 4; i++)
						- var img = "i/about/service_" + i + ".svg"
						li 
							.about-item_img 
								img(src=img, alt="")
							.about-item_content 
								h3 Технологии
								p Основываясь на современных научно-технических разработках, производим уникальные изделия.
	section.block_txt 
		+default_block({
			count: 2,
		})
	section.brand 
		.section_in 
			.brand_main 
				.brand_title.section_title 
					h4 Наши партнеры
				.brand_slider_w 
					.brand_slider.swiper 
						.swiper-wrapper
							-for(i = 0; i < 12; i++)
								.swiper-slide 
									.brand_slide 
										img(src="i/about/brand.jpg", alt="")
					.brand_nav_w 
						.brand_scrollbar.swiper-scrollbar
						+navigation({
							class: 'brand'
						})
	+action({
		img: 'action_1',
		title: 'Станьте нашим партнером!',
		txt: 'Оставьте заявку, и мы свяжемся с вами в ближайшее время.',
		class: 'about_action'
	})
	section.gallery 
		.section_in 
			.gallery_main
				.gallery_head 
					h4 Галерея
					+btn({
						link: true,
						name: 'Показать больше',
						class: 'gallery_page_link'
					})
				ul.gallery_grid 
					-for(i = 0; i < 6; i++)
						li 
							a(href="#")
								img(src="i/products/products.jpg", alt="") 