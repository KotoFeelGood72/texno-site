extends _layout

block vars
	- array = {body_class:'', layout_mod:'', sub_keywords:'', title_inner:'Название объекта'}
block content_block
	+breadcrumb(['Главная', 'Объекты'], 'Название объекта ')
	section.singleProducts.no_sidebar 
		.section_in 
			.singleProducts_main 
				.singleProducts_body 
					.page_title 
						h1!=array.title_inner
					+hero({
						title: 'Заголовок',
						img: 'i/products/products.jpg',
						class: 'object_hero_mod',
						txt: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip.'
					})
					+default_block({
						count: 2,
						class: 'mod_default_block'
					})
					.block-gallery 
						.block-gallery_head 
							h4 Фото объекта
							+navigation({
								class: 'singleGallery'
							})
						.singleGallery_slider_w 
							.objectGallery_slider.swiper 
								.swiper-wrapper
									-for(i = 0; i < 12; i++) 
										.swiper-slide
											.singleGallery_slide 
												a(href="i/products/products.jpg" data-fancybox)
													img(src="i/products/products.jpg", alt="")
							.objectGallery_scrollbar.global_scrollbar.swiper-scrollbar
					.block-gallery 
						.block-gallery_head 
							h4 Другие объекты
							+navigation({
								class: 'objects_slider'
							})
						.singleObjectGallery_slider_w 
							.mod_object_slider.swiper 
								.swiper-wrapper
									-for(i = 0; i < 12; i++)
										.swiper-slide
											.singleObjectGallery_slide.object_item 
												a(href="#")
													.object_item_img 
														img(src="i/products/products.jpg", alt="")
													.object_item_content 
														h3 Рекультивация полигона ТКО «Царёво»
														p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua
							.modObject_scrollbar.global_scrollbar.swiper-scrollbar