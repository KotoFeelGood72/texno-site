mixin btn(data)
	if data.link === true
		.btn.btn_link.btn-border(class=data.class)
			a(href="#")=data.name
	else 
		.btn(class=`${data.class}_w`)
			button(type=data.type ? data.type : data.type="button")=data.name ? data.name : data.name="Отправить"

mixin products(data)
	.products_card_w 
		a(href="#").products_card
			.products_item_img 
				img(src="i/products/products.jpg", alt="")
			.products_item_content 
				.products_item_title 
					h3 Трубы полимержелезобетонные безнапорные оволоидального сечения
				.products_item_price 200
				.products_item_btn.yellow 
					button(type="button")
						+icon('arrow')
mixin input(data)
	.global_input(class=data.class)
		input(type=data.type ? data.type : data.type="text" placeholder=data.place ? data.place : '' value=data.value ? data.value : '')

mixin navigation(data)
	.slider_nav(class=`${data.class}_nav`) 
