mixin action(data)
	section.action(class=data.class) 
		.section_in 
			.action_main(class=`${data.class}_main`) 
				.action_img 
					img(src=`i/home/${data.img}.png`, alt="")
				.action_form_w
					.action_title.section_title
						h3=data.title
					.action_txt 
						p=data.txt
					form.action_form
						+input({
							class: 'action_input',
							place: 'Ваше имя',
						})
						+input({
							class: 'action_input',
							place: 'Ваше телефон',
							type: 'tel',
						})
						+input({
							class: 'action_btn yellow',
							value: 'Отправить',
							type: 'submit'
						})
					.action_notice!='Отправляя форму, вы соглашаетесь c <a href="#" target="_blank">политикой конфиденциальности.</a>'

mixin hero(data)
	.customSingle_hero(class=data.class)
		.customSingle_hero_content
			h2=data.title
			.customSingle_hero_txt 
				p=data.txt
		img(src=data.img, alt="")